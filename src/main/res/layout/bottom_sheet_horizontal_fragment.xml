<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bottom_sheet_single_image_and_text"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/bottom_sheet_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bottom_sheet_title_horizontal_margin"
        android:layout_marginRight="@dimen/bottom_sheet_title_horizontal_margin"
        android:height="@dimen/bottom_sheet_title_height"
        android:gravity="center"
        android:textColor="@color/bottom_sheet_title_color"
        android:textSize="@dimen/bottom_sheet_title_font_size"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_sheet_grid_bottom_margin"
        android:layout_marginTop="@dimen/bottom_sheet_grid_top_margin"/>


</LinearLayout>